<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<HBox xmlns:fx="http://javafx.com/fxml/1" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.rakkiz.taskmanagerclient.controller.PomodoroController">
    <VBox fx:id="content" alignment="CENTER" HBox.hgrow="ALWAYS">
        <HBox>
            <Text fill="#201f1a" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header" text="Pomodoro">
                <font>
                    <Font size="38.0"/>
                </font>
            </Text>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="300.0">
            <HBox alignment="CENTER">
                <Label fx:id="title" text="Title">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                </Label>
            </HBox>
            <Label fx:id="description" text="Description some stuff and this is idk what the " wrapText="true">
                <font>
                    <Font name="System Italic" size="18.0"/>
                </font>
                <VBox.margin>
                    <Insets left="70.0" right="70.0"/>
                </VBox.margin>
            </Label>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </VBox>
    </VBox>
    <stylesheets>
        <URL value="@../css/pomodoro-style.css"/>
        <URL value="@../css/fonts.css"/>
        <URL value="@../css/style.css"/>
    </stylesheets>
</HBox>
