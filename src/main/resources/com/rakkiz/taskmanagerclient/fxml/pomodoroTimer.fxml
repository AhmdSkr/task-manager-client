<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" spacing="20.0" stylesheets="@../css/pomodoro-style.css, @../css/fonts.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rakkiz.taskmanagerclient.controller.PomodoroTimerController">
    <children>
        <VBox fx:id="Vbox" alignment="CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to top, rgba(199, 215, 226, 0.5), rgba(248, 196, 200, 0.5)); -fx-background-radius: 50%;" styleClass="timerTime">
            <Label fx:id="time" style="-fx-font-weight: 500; -fx-font-size: 96px; -fx-font-style: normal;" styleClass="firaSemiBold" text="25:00" textAlignment="JUSTIFY" textFill="#f08890">
                <font>
                    <Font name="Monaco" size="96.0" />
                </font>
            </Label>
            <ToggleButton fx:id="SP" mnemonicParsing="false" prefHeight="57.0" prefWidth="233.0" styleClass="startBtn" text="Start" textFill="#e63946">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </ToggleButton>
             <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #f08890; -fx-background-radius: 30px;">
                 <padding>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                 </padding>
                 <Label prefHeight="200.0" prefWidth="80.0" text="Number:" textFill="WHITE">
                     <font>
                         <Font size="18.0" />
                     </font>
                 </Label>
            <Label fx:id="pomCycles" layoutX="20.0" layoutY="15.0" prefHeight="200.0" text="2" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
             </HBox>
        </VBox>
    </children>
</HBox>
